<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <title></title>
	<meta charset="utf-8" />
    <style>
        .lightoff {
            -webkit-filter: grayscale(1);
        }

        .lighton {
            -webkit-filter: grayscale(0);
        }
    </style>
    <script>

        window.onload = function () {

            var stars = document.getElementsByClassName("lightoff")

            for (var i = 0; i < stars.length ; i++) {
                stars[i].onmouseover = function () { mouseOver(this.id) };
                stars[i].onmouseout = function () { mouseOut(this.id) };;
                stars[i].onclick = function () { Click(this.id) };
            }

        }

        function mouseOver(starid) {
            for (var i = 0; i <= starid.substr(4); i++) {
                document.getElementById(starid).className = "lighton";
            }
        }


        function mouseOut(starid) {
            ClearAll();
            for (var i = 0; i < starid.substr(4); i++) {
                document.getElementById(starid).className = "lighton";
            }
        }


        function Click(starid) {
            for (var i = 0; i <= starid.substr(4); i++) {
                document.getElementById(rating).innerHTML = parseInt(i + 1) + "顆星";
            }
        }
        function ClearAll() {
            document.getElementsByTagName("img").className = "lightoff";
        }
    </script>
</head>
<body>
    <div style=" display:inline-block ; ">
        <img id="star0" class="lightoff" src="Images/chngstar.gif" />
        <img id="star1" class="lightoff" src="Images/chngstar.gif" />
        <img id="star2" class="lightoff" src="Images/chngstar.gif" />
        <img id="star3" class="lightoff" src="Images/chngstar.gif" />
        <img id="star4" class="lightoff" src="Images/chngstar.gif" />
    </div>
    <span id="rating"></span>
   
</body>
</html>
